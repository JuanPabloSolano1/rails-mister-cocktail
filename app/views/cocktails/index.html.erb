      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.photo, height: 300, width: 500,crop: :fill%>);">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
